<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dl_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <!--主布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
          >
          
        <android.support.v7.widget.Toolbar
	  android:id="@+id/toolbar"
	  android:layout_height="wrap_content"
	  android:layout_width="fill_parent"
	  android:paddingRight="10dp"
	  android:background="@color/topcolor"
	   >
	  
	    <LinearLayout  
        android:id="@+id/linearLayout1"  
        android:layout_width="40dp"  
        android:layout_height="40dp"  
		
         >  
		    <ImageView  
		        android:id="@+id/imgUser"
		        android:layout_width="fill_parent"  
		        android:layout_height="fill_parent"  
		        android:src="@drawable/category" 
	        />  
	    </LinearLayout>
	  <LinearLayout  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
		android:layout_weight="1.0"  
		android:orientation="horizontal"
         >
 
  <!-- 
        <TextView  
            android:id="@+id/text1"  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:layout_weight="1.0"  
            android:gravity="right"  
            android:text="页卡1"  
            android:layout_marginRight="20dp"
            android:textColor="#8FFFFF"  
            android:textSize="18.0dip" />  

        <TextView  
            android:id="@+id/text2"  
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content"  
            android:layout_weight="1.0"  
            android:gravity="left"  
            android:text="页卡2"  
            android:layout_marginLeft="20dp"
            android:textColor="#4FFFFF"  
            android:textSize="18.0dip" />  
  -->
  		
  		<ImageView  
		    android:id="@+id/text1"
		    android:layout_width="fill_parent"  
            android:layout_height="40dp"
            android:layout_weight="1.0"  
            android:gravity="right"  
            android:paddingLeft="50dp"
		    android:src="@drawable/music" 
		    />
  		<ImageView  
		    android:id="@+id/text2"
		    android:layout_width="fill_parent"  
            android:layout_height="40dp"
            android:layout_weight="1.0"  
            android:gravity="left"  
            android:paddingRight="50dp"
		    android:src="@drawable/friends" 
		    />
  		
    </LinearLayout>  
   
	</android.support.v7.widget.Toolbar>
         <com.example.ViewClass.MainPageView 
		android:id="@+id/vPager1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_gravity="center"  
        android:layout_weight="1.0"  
        android:background="#FFFFFF"  
        android:flipInterval="30"  
        android:persistentDrawingCache="animation" />  
          </LinearLayout>
    <!--侧滑菜单-->
    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="match_parent"
        android:background="#fff"
    	android:orientation="vertical"
    	
        android:layout_gravity="start">
        
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:background="@color/topcolor"
        android:layout_weight="7" 
        android:gravity="bottom"
          >
	  <com.example.ViewClass.RoundAngleImageView  
                android:id="@+id/iv_head"  
                android:layout_width="100dp"  
                android:layout_height="100dp"  
                android:layout_marginLeft="20dp" 
                android:layout_marginBottom="10dp"
                android:src="@drawable/tempp"/>  
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        >
        <TextView
	           android:id="@+id/textView1"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:paddingLeft="10dp"
	           android:textColor="@color/floralwhite" 
	           android:textSize="16dip"
	           android:text="用户名：" />
	   	<TextView
	           android:id="@+id/textName"
	           android:layout_width="148dp"
	           android:layout_height="40dp"
	           android:textColor="@color/black" 
	           android:layout_marginLeft="50dp"
	           
	           android:textSize="16dip"
	           android:text="textPerson" 
	           />
	   	<EditText
	   	    android:id="@+id/editName"
            android:layout_width="148dp"
	           android:layout_height="38dp"
	           android:textColor="@color/black" 
	           android:layout_marginLeft="50dp"
	           android:layout_marginBottom="2dp"
	           android:textSize="16dip"
	           android:ems="10"
	           android:visibility="gone"/>
             </LinearLayout>
	       </LinearLayout>
	    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"  
        android:gravity="bottom"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnModify"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="@color/floralwhite" 
        	android:layout_marginRight="20dp"
        	android:background="@drawable/drawer_button"
            android:text="修改" />
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="@color/floralwhite" 
        	android:layout_marginLeft="20dp"
        	android:background="@drawable/drawer_button"
            android:text="保存" />
		</LinearLayout>
	   </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>