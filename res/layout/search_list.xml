<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow"
    android:gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
     >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_015" />


    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginLeft="5dp" 
        android:layout_marginRight="5dp"
        android:layout_weight="0.40"
    >
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="0.40"

	        android:text="TextView"
	        android:textColor="@color/black" 
	        android:textSize="14dip"/>
	    <TextView
	        android:id="@+id/searchAuthor"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="0.40"
	        android:background="@drawable/view_line"
	        android:text="TextView"
	        android:textColor="@color/darkslategrey" 
	        android:textSize="14dip"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="0dp"
        android:scaleType="center"
        android:src="@drawable/@android:drawable/ic_menu_sort_by_size" 
        />

    
</LinearLayout>