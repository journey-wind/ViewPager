<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.viewpagertest.AddMsgActivity" 
    android:orientation="vertical" 
    android:background="@color/gainsboro">
    
    
    <android.support.v7.widget.Toolbar
	  android:id="@+id/toolbar"
	  android:layout_height="wrap_content"
	  android:layout_width="fill_parent"
	  android:paddingRight="10dp"
	  android:background="#cc0000"
	   >
	   <LinearLayout  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal"
         >

	    <ImageView
	        android:id="@+id/imageExit"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:scaleType="center"
	        android:src="@drawable/abc_btn_radio_to_on_mtrl_015" />
         <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="25dp"
	        android:layout_weight="1"
	        android:paddingLeft="10dp"
	        android:text="发动态"
	        android:drawable="@color/floralwhite"
	        android:textSize="20dip"/>
         <TextView
             android:id="@+id/textSend"
	        android:layout_width="wrap_content"
	        android:layout_height="25dp"
	        android:text="发送"
	        android:drawable="@color/floralwhite"
	        android:textSize="16dip"/>
         </LinearLayout>
    </android.support.v7.widget.Toolbar>
	
    <LinearLayout
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:orientation="vertical"
    android:background="@color/floralwhite"
     >
	   
	   <LinearLayout  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="right"
        android:background="@color/floralwhite"
         >
         <TextView
            android:id="@+id/textWoridNum"
	        android:layout_width="wrap_content"
	        android:layout_height="25dp"
	        android:layout_marginRight="15dp"
	        android:layout_marginTop="5dp"
	        android:text="0/140"
	        android:typeface="monospace"
	        android:textColor="@color/black" 
	        android:textSize="16dip"/>
         </LinearLayout>
		<LinearLayout style="@style/HorizontalDividerTop" 
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"/>
	   <EditText
        android:id="@+id/editMessage"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:gravity="top"
        android:inputType="textMultiLine" 
        android:textColor="@color/black" 
        android:background="@color/floralwhite"
        android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:textSize="16dip"
		android:hint="写写感受吧~">

    	</EditText>
  		<LinearLayout style="@style/HorizontalDividerTop" 
  		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"/>
    	<LinearLayout  
    	    android:id="@+id/layoutselect"
        android:layout_width="fill_parent"  
        android:layout_height="50dp"  
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/floralwhite"
         >
         <TextView
             android:id="@+id/textMusic"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:layout_weight="1"
	        android:layout_marginLeft="15dp"
	        android:text="选择歌曲"
	        android:textColor="@color/black" 
	        android:textSize="16dip"/>
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="25dp"
	        android:layout_marginRight="15dp"
	        android:text=">"
	        android:typeface="monospace"
	        android:textColor="@color/black" 
	        android:textSize="16dip"/>
         </LinearLayout>
     </LinearLayout>
	<LinearLayout style="@style/HorizontalDividerTop" />

</LinearLayout>
