<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/silver">

    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="3"
	    android:orientation="vertical" 
	    android:gravity="center"
	   	>
     <LinearLayout 
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
   	>
	   	 <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:gravity="center"
	   	>
		     <TextView
		        android:id="@+id/tv_lay4_musicOneName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textSize="16dp"
		        android:text="musicOneName" />
    	</LinearLayout>
	     <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_weight="1"
	   	>
		     <TextView
		        android:id="@+id/tv_lay4_musicTwoName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textSize="16dp"
		       android:text="musicTwoName" />
        </LinearLayout>
    </LinearLayout>

     <LinearLayout 
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
   	>
	   	 <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:gravity="center"
	   	>
		    <ImageButton
		        android:id="@+id/btn_lay4_musicOne"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/type_music" />
    	</LinearLayout>
	     <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_weight="1"
	   	>
		     <ImageButton
		        android:id="@+id/btn_lay4_musicTwo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/type_music" />
        </LinearLayout>
    </LinearLayout>
	 <LinearLayout 
	    android:paddingTop="4dp"
        android:paddingBottom="4dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
   	>
	   	 <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:gravity="center"
	   	>
		     <TextView
		        android:id="@+id/tv_lay4_musicOneStatue"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textSize="16dp"
		        android:text="44100Hz 2Channel " />
    	</LinearLayout>
	     <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_weight="1"
	   	>
		     <TextView
		        android:id="@+id/tv_lay4_musicTwoStatue"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textSize="16dp"
		       android:text="44100Hz 2Channel " />
        </LinearLayout>
    </LinearLayout>
     </LinearLayout>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:layout_weight="7"
	   	>
		     <ImageButton
		        android:id="@+id/btn_lay4_musicMix"
		        android:layout_width="90dp"
		        android:layout_height="120dp"
		        android:background="@null"
		        android:src="@drawable/progressbar_mix"
		        />
        </LinearLayout>
</LinearLayout>
